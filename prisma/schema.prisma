generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Student {
  id            String   @id @default(uuid())
  name          String
  lastName      String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("students")
}